@model List<Library_Management_System.Models.BookViewModel>

<h2 class="text-2xl font-bold text-center pt-2 my-4">Livros</h2>

<div class="flex w-5/6 justify-end -mt-12 mb-4">
    @{
        if (Context.Session.GetString("Admin") == "true")
        {
            <a href="/book/Create" class="bg-gray-700 hover:bg-gray-800 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">Registrar Livro</a>
        }
    }
</div>

<div class="flex justify-center">
    <div class="w-full max-w-7xl">
        <table class="min-w-full bg-gray-700 text-white rounded-lg shadow">
            <thead>
                <tr>
                    <th class="py-2 px-4 text-left">Código</th>
                    <th class="py-4 px-6 text-left">Título</th>
                    <th class="py-4 px-6 text-left">Autor</th>
                    <th class="py-4 px-6 text-left">Categoria</th>
                    <th class="py-4 px-6 text-left">Ano de Publicação</th>
                    <th class="py-4 px-6 text-left">Foto</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var book in Model)
                {
                    <tr class="border-t border-gray-100">
                        <td class="py-2 px-4 text-left">@book.Id</td>
                        <td class="py-2 px-4 text-left">@book.Title</td>
                        <td class="py-2 px-4 text-left">@book.AuthorId - @book.AuthorName</td>
                        <td class="py-2 px-4 text-left">@book.CategoryId - @book.CategoryDescription</td>
                        <td class="py-2 px-4 text-left">@book.PublishedYear</td>
                        <td class="py-2 px-4 text-left">
                            <img id="imgPreview" src="data:image/jpeg;base64,@book.ImageBase64" class="img-responsive w-12 h-auto transition-transform transform cursor-pointer hover:scale-150" width="50" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>