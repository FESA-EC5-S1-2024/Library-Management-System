@model BookViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Book Registration</h2>

<form action="Save" method="post" class="col-md-6" enctype="multipart/form-data">
    <input type="hidden" name="Operacao" value="@ViewBag.Operacao" />

    <label for="Title" class="control-label">Book Title</label>
    <input asp-for="Title" class="form-control" />
    <span asp-validation-for="Title" class="text-danger"></span>
    <br />

    <label for="AuthorId" class="control-label">Author</label>
    <select asp-for="AuthorId" asp-items="ViewBag.Autores" class="form-control"> </select>
    <span asp-validation-for="AuthorId" class="text-danger"></span>
    <br />

    <label for="CategoryId" class="control-label">Category</label>
    <select asp-for="CategoryId" asp-items="ViewBag.Categorias" class="form-control"> </select>
    <span asp-validation-for="CategoryId" class="text-danger"></span>
    <br />

    <label for="ISBN" class="control-label">ISBN</label>
    <input asp-for="ISBN" class="form-control" />
    <span asp-validation-for="ISBN" class="text-danger"></span>
    <br />

    <label for="PublishedYear" class="control-label">PublishedYear</label>
    <input asp-for="PublishedYear" class="form-control" />
    <span asp-validation-for="PublishedYear" class="text-danger"></span>
    <br />

    <input type="file" name="Image" id="Image" onchange="displayImage()" class="btn btn-secondary">
    <img id="imgPreview" src="data:image/jpeg;base64,@Model.ImageBase64" class="img-responsive" width="200">
    <span asp-validation-for="Image" class="text-danger"></span>
    <br />

    <br />
    <input type="submit" value="Save" class="btn btn-info" />
    <br />
</form>