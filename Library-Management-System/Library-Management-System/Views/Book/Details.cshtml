@model Library_Management_System.Models.BookViewModel

<div class="container">
    <h2>Book Details</h2>
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Author Name</dt>
        <dd class="col-sm-10">@Model.AuthorName</dd>

        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.CategoryDescription</dd>

        <dt class="col-sm-2">Published Year</dt>
        <dd class="col-sm-10">@Model.PublishedYear</dd>
    </dl>
</div>