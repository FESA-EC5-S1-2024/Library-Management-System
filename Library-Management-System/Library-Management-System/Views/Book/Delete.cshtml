@model Library_Management_System.Models.BookViewModel

<div class="container">
    <h2>Delete Book</h2>
    <form asp-action="DeleteConfirmed" method="post">
        <div class="form-group">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="AuthorName"></label>
            <input asp-for="AuthorName" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="CategoryDescription"></label>
            <input asp-for="CategoryDescription" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="PublishedYear"></label>
            <input asp-for="PublishedYear" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="ISBN"></label>
            <input asp-for="ISBN" class="form-control" readonly />
        </div>
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
    </form>
</div>