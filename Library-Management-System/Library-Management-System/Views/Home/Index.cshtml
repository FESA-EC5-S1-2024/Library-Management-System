@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewData["Title"] = "Home";
}
<p class="text-3xl font-bold text-center mt-4">Sistema de Gerenciamento de Livraria</p>

<div>
    @{
        if (Context.Session.GetString("Logado") == "true")
        {
            <div class="container mx-auto px-4 py-8 flex flex-wrap justify-center">
                <div class="w-full sm:w-1/2 lg:w-1/3 p-2">
                    <div class="bg-white shadow-lg rounded-lg overflow-hidden">
                        <a asp-controller="Book" asp-action="Index">
                            <div class="p-6">
                                <h2 class="text-2xl font-bold mb-2">Livros</h2>
                                <p>Gerencie os livros da biblioteca.</p>
                            </div>
                        </a>
                    </div>
                </div>
                <div class="w-full sm:w-1/2 lg:w-1/3 p-2">
                    <div class="bg-white shadow-lg rounded-lg overflow-hidden">
                        <a asp-controller="Loan" asp-action="Index">
                            <div class="p-6">
                                <h2 class="text-2xl font-bold mb-2">Empréstimos</h2>
                                <p>Gerencie os empréstimos de livros.</p>
                            </div>
                        </a>
                    </div>
                </div>
                @if (Context.Session.GetString("Admin") == "true")
                {
                    <div class="w-full sm:w-1/2 lg:w-1/3 p-2">
                        <div class="bg-white shadow-lg rounded-lg overflow-hidden">
                            <a asp-controller="Author" asp-action="Index">
                                <div class="p-6">
                                    <h2 class="text-2xl font-bold mb-2">Autores</h2>
                                    <p>Gerencie os autores dos livros.</p>
                                </div>
                            </a>
                        </div>
                    </div>
                    <div class="w-full sm:w-1/2 lg:w-1/3 p-2">
                        <div class="bg-white shadow-lg rounded-lg overflow-hidden">
                            <a asp-controller="Category" asp-action="Index">
                                <div class="p-6">
                                    <h2 class="text-2xl font-bold mb-2">Categorias</h2>
                                    <p>Gerencie as categorias dos livros.</p>
                                </div>
                            </a>
                        </div>
                    </div>
                    <div class="w-full sm:w-1/2 lg:w-1/3 p-2">
                        <div class="bg-white shadow-lg rounded-lg overflow-hidden">
                            <a asp-controller="User" asp-action="Index">
                                <div class="p-6">
                                    <h2 class="text-2xl font-bold mb-2">Usuários</h2>
                                    <p>Gerencie os usuários do sistema.</p>
                                </div>
                            </a>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="container w-4/6 mx-auto px-4 pt-12 py-4">
                <div class="bg-white shadow-lg rounded-lg overflow-hidden p-6 mb-8">
                    <h2 class="text-xl font-bold mb-2">Bem-vindo ao Sistema de Gerenciamento de Livraria!</h2>
                    <p class="text-gray-700">Esta aplicação foi desenvolvida para ajudar a organizar e gerenciar as operações diárias de uma livraria, fornecendo um conjunto completo de ferramentas para gerenciar livros, empréstimos, autores, categorias e usuários. Se você é um administrador, pode acessar funcionalidades adicionais, como o gerenciamento de autores, categorias e usuários do sistema.</p>
                    <a href="@Url.Action("Index", "About")" class="bg-gray-700 hover:bg-gray-800 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline mt-4 inline-block">Saiba mais</a>
                </div>
            </div>
            <div class="container mx-auto w-full sm:w-1/2 lg:w-1/3">
                <div class="bg-white shadow-lg rounded-lg overflow-hidden p-6">
                    <h2 class="text-xl font-bold mb-2">Acesso Restrito</h2>
                    <p class="text-gray-700">Faça login para acessar o sistema e suas funcionalidades. Se você não tem uma conta, registre-se para obter acesso.</p>
                    <a href="@Url.Action("Index", "Login")" class="bg-gray-700 hover:bg-gray-800 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline mt-4 inline-block">Área de Login</a>
                </div>
            </div>
        }
    }
</div>