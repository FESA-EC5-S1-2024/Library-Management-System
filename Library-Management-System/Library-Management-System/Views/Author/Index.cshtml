@model IEnumerable<Library_Management_System.Models.AuthorViewModel>

<div class="container">
    <h2>Authors</h2>
    <a href="@Url.Action("Create")" class="btn btn-success mb-2">Create New Author</a>
    <table class="table table-dark">
        <thead>
            <tr>
                <th>Name</th>
                <th>Country</th>
                <th>Birthdate</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (AuthorViewModel author in Model)
            {
                <tr>
                    <td>@author.Name</td>
                    <td>@author.Country</td>
                    <td>@author.Birthdate.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a href="/author/edit?id=@author.Id" class="btn btn-primary">Edit</a>
                        <a href="javascript:deleteRecord('author', @author.Id)" class="btn btn-danger"> Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>