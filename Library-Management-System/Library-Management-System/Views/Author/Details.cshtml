@model Library_Management_System.Models.AuthorViewModel

<div class="container">
    <h2>Author Details</h2>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Country</dt>
        <dd class="col-sm-10">@Model.Country</dd>

        <dt class="col-sm-2">Birthdate</dt>
        <dd class="col-sm-10">@Model.Birthdate.ToString("yyyy-MM-dd")</dd>
    </dl>
</div>