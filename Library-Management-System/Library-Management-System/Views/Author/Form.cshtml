@model Library_Management_System.Models.AuthorViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Registro de Autor";
}
<h2 class="text-2xl font-bold text-center my-4">Registro de Autor</h2>

<div class="flex justify-center">
    <div class="w-full max-w-md">
        <form action="Save" method="post" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
            <input type="hidden" name="Operacao" value="@ViewBag.Operacao" />
            @Html.HiddenFor(model => model.Id)

            <div class="mb-4">
                <label for="Name" class="block text-gray-700 text-sm font-bold mb-2">Nome</label>
                <input asp-for="Name" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                <span class="text-red-500 text-xs italic" asp-validation-for="Name"></span>
            </div>

            <div class="mb-4">
                <label for="Country" class="block text-gray-700 text-sm font-bold mb-2">País</label>
                <input asp-for="Country" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                <span class="text-red-500 text-xs italic" asp-validation-for="Country"></span>
            </div>

            <div class="mb-4">
                <label for="Birthdate" class="block text-gray-700 text-sm font-bold mb-2">Data de Nascimento</label>
                <input asp-for="Birthdate" type="date" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                <span class="text-red-500 text-xs italic" asp-validation-for="Birthdate"></span>
            </div>

            <div class="flex items-center justify-between">
                <input type="submit" value="Salvar" class="bg-gray-700 hover:bg-gray-800 hover:cursor-pointer text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" />
            </div>
        </form>
    </div>
</div>