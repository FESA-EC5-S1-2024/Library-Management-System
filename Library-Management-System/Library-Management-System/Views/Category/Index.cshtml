@model List<CategoryViewModel>

<h2>Categories</h2>

<a href="/category/Create" class="btn btn-success">Register Category</a>
<br />
<br />
<table class="table table-striped table-responsive">
    <tr>
        <th>Actions</th>
        <th>Description</th>
    </tr>

    @foreach (CategoryViewModel category in Model)
    {
        <tr>
            <td>
                <a href="/category/edit?id=@category.Id" class="btn btn-primary">Edit</a>
                <a href="javascript:deleteRecord('category', @category.Id)" class="btn btn-danger"> Delete</a>
            </td>
            <td>@category.Description</td>
        </tr>
    }
</table>