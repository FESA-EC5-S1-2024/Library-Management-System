@model List<CategoryViewModel>
@{
    ViewData["Title"] = "Categorias";
}

<h2 class="text-2xl font-bold text-center my-4">Categorias</h2>

<div class="flex max-w-5xl justify-end ml-4 -mt-12 mb-4">
    <a href="/category/Create" class="bg-gray-700 hover:bg-gray-800 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">Registrar Categoria</a>
</div>

<div class="flex justify-center">
    <div class="w-full max-w-xl">
        <table class="min-w-full bg-gray-700 text-white rounded-lg shadow">
            <thead>
                <tr>
                    <th class="py-4 px-6 text-left">Ações</th>
                    <th class="py-4 px-6 text-left">Descrição</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr class="border-t border-gray-100">
                        <td class="py-2 px-4 text-left">@category.Description</td>
                        <td class="py-2 px-4 text-left">
                            <a href="/category/edit?id=@category.Id" class="hover:text-gray-500">✏️</a>
                            <a onclick="deleteRecord('category', @category.Id)" href="javascript:;" class="ml-2 hover:text-gray-500">❌</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>