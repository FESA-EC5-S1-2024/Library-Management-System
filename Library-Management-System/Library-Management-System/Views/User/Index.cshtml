@model IEnumerable<Library_Management_System.Models.UserViewModel>

<div class="container">
    <h2>Users</h2>
    <a href="@Url.Action("Create")" class="btn btn-success mb-2">Create New User</a>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Registration Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>@user.RegistrationDate.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = user.Id })" class="btn btn-primary">Edit</a>
                        <a href="@Url.Action("Details", new { id = user.Id })" class="btn btn-info">View</a>
                        <a href="@Url.Action("Delete", new { id = user.Id })" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>