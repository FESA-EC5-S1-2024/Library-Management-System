@model List<UserViewModel>

<h2>Users</h2>

<a href="/user/Create" class="btn btn-success">Register User</a>
<br />
<br />
<table class="table table-striped table-responsive">
    <tr>
        <th>Actions</th>
        <th>Nome</th>
        <th>Email</th>
        <th>Data de Registro</th>
    </tr>

    @foreach (UserViewModel user in Model) 
    {
        <tr>
            <td>
                <a href="/user/edit?id=@user.Id">✏️</a>
                <a href="javascript:deleteRecord('user', @user.Id)">❎</a>
            </td>
            <td>@user.Name</td>
            <td>@user.Email</td>
            <td>@user.RegistrationDate.ToShortDateString()</td>
        </tr>
    }
</table>