@model Library_Management_System.Models.UserViewModel

<div class="container">
    <h2>Delete User</h2>
    <form asp-action="DeleteConfirmed" method="post">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="RegistrationDate"></label>
            <input asp-for="RegistrationDate" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="TypeId"></label>
            <input asp-for="TypeId" class="form-control" readonly />
        </div>
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
    </form>
</div>