@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class="text-2xl font-bold text-center my-4">Login</h2>
<div class="flex justify-center">
    <div class="w-full max-w-sm">
        <form action="/login/Fazlogin" method="post" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">

            <div class="mb-4">
                <label for="email" class="block text-gray-700 text-sm font-bold mb-2">Email</label>
                <input type="text" name="email" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" required placeholder='Email...' />
            </div>

            <div class="mb-4">
                <label for="senha" class="block text-gray-700 text-sm font-bold mb-2">Senha</label>
                <input type="password" name="senha" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" required placeholder='Senha...' />
            </div>

            <div class="mb-6 text-red-500 text-xs italic">
                @ViewBag.Erro
            </div>

            <div class="flex items-center justify-between">
                <input type="submit" value="Entrar" class="bg-gray-700 hover:bg-gray-800 hover:cursor-pointer text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" />
                <a asp-controller="User" asp-action="Create" class="inline-block align-baseline font-bold text-sm text-gray-700 hover:text-gray-800 border-1 border-gray">
                    Criar Novo Usuário
                </a>
            </div>
        </form>
    </div>
</div>