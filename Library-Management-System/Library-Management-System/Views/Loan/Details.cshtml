@model Library_Management_System.Models.LoanViewModel

<div class="container">
    <h2>Delete Loan</h2>
    <form asp-action="DeleteConfirmed" method="post">
        <div class="form-group">
            <label asp-for="UserName"></label>
            <input asp-for="UserName" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="BookTitle"></label>
            <input asp-for="BookTitle" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="LoanDate"></label>
            <input asp-for="LoanDate" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="DueDate"></label>
            <input asp-for="DueDate" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="ReturnDate"></label>
            <input asp-for="ReturnDate" class="form-control" readonly />
        </div>
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
    </form>
</div>